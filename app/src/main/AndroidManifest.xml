<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.mk.enjoylearning">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/app_icon"
        android:label="@string/app_name"
        android:supportsRtl="false"
        tools:replace="android:supportsRtl"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.mk.playAndLearn.activity.MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.mk.playAndLearn.activity.GeneralSignActivity"
            android:screenOrientation="portrait">

        </activity>
        <activity
            android:name="com.mk.playAndLearn.activity.SignUpActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.mk.playAndLearn.activity.SignInActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.mk.playAndLearn.activity.WelcomeActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>