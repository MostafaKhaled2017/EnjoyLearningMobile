<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionOverflowButtonStyle">@style/MyOverflowButtonStyle</item>

    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="NoActionBar" parent="@android:style/Theme.Holo.Light">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="editTextStyle">
        <item name="android:layout_margin">5dp</item>
        <item name="android:background">@drawable/new_et</item>
        <item name="android:textColorHint">@color/color2</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingLeft">5dp</item>

    </style>

    <style name="answersGroupStyle">
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginLeft">@dimen/margin_left_of_answers_group</item>
        <item name="android:layout_marginTop">@dimen/margin_top_of_answers_group</item>
        <item name="android:layout_marginRight">@dimen/margin_right_of_answers_group</item>
        <item name="android:layout_marginBottom">@dimen/margin_bottom_of_answers_group</item>
        <item name="android:background">@color/white</item>

    </style>

    <style name="oneAnswerStyle">
        <item name="android:padding">@dimen/margin_between_radiobuttons_orCheckBoxes</item>
        <item name="android:textColor">@color/writingColor</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/welcome_drawable</item>
    </style>

    <style name="MyOverflowButtonStyle" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">#fff</item>
    </style>

    <style name="buttonStyle" parent="Theme.AppCompat.NoActionBar">
        <item name="android:layout_margin">10dp</item>
        <item name="android:background">@drawable/buttonshape</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="rectangleButtonStyle" parent="Theme.AppCompat.NoActionBar">
        <item name="android:layout_margin">10dp</item>
        <item name="android:background">@drawable/rectangle_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="spinnerItemStyle" parent="android:Widget.TextView.SpinnerItem">

    </style>

    <style name="spinnerDropDownItemStyle" parent="android:TextAppearance.Widget.TextView.SpinnerItem">

    </style>
</resources>
