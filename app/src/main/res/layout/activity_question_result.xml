<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layoutDirection="rtl">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:background="@color/colorPrimary">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tahadi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/cairo"
                    android:gravity="center"
                    android:text="تحدى الان"
                    android:textColor="#FFFF"
                    android:textSize="@dimen/_15sdp"
                    android:textStyle="bold"
                    tools:fontFamily="@font/cairo" />

                <ImageView
                    android:id="@+id/backBtn"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    app:srcCompat="@drawable/backf"



                    />


            </RelativeLayout>





        </androidx.appcompat.widget.Toolbar>


        <RelativeLayout
            android:layout_below="@+id/toolbar"
            android:layout_marginStart="@dimen/_10sdp"

            android:id="@+id/relativespinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textcomplaint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_7sdp"

                android:layout_gravity="center"
                android:fontFamily="@font/cairo_semibold"
                android:gravity="center"
                android:text=" تقديم  شكوى"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/warn"
                android:layout_marginTop="@dimen/_20sdp"



                />

            <ImageView
                android:id="@+id/warn"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/warning"

                />

        </RelativeLayout>


        <TextView
            android:id="@+id/resultText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relativespinner"
            android:layout_gravity="center"
            android:layout_marginTop="-16dp"
            android:fontFamily="@font/cairo_semibold"
            android:gravity="center"
            android:text="اجابتك صحيحة"
            android:textColor="@color/black"


            android:textSize="@dimen/_18sdp" />
        <RelativeLayout
            android:id="@+id/linearone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/resultText"
            android:layout_marginTop="@dimen/_5sdp"
            android:orientation="horizontal">

            <LinearLayout

                android:id="@+id/oneplayer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/firstPlayerImage"
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="@dimen/_80sdp"
                    android:layout_gravity="center"
                    android:src="@drawable/woman"
                    app:civ_border_color="@color/colorPrimary"
                    app:civ_border_width="4dp" />

                <TextView
                    android:id="@+id/firstPlayerName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/cairo_semibold"
                    android:text="تسنيم  عماد"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14sdp"
                    tools:fontFamily="@font/cairo_semibold" />


            </LinearLayout>


            <LinearLayout
                android:id="@+id/vs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/oneplayer"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_10sdp"

                android:orientation="vertical">

                <ImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/proftwo"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:src="@drawable/icons" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/cairo_semibold"
                    android:text="VS"
                    android:layout_marginBottom="@dimen/_6sdp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_15sdp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/vs"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/secondPlayerImage"
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="@dimen/_80sdp"
                    android:layout_gravity="center"
                    android:src="@drawable/man"

                    app:civ_border_color="@color/blueDark"
                    app:civ_border_width="4dp" />

                <TextView
                    android:id="@+id/secondPlayerName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/cairo_semibold"
                    android:text="مصطفى  خالد"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14sdp" />


            </LinearLayout>


        </RelativeLayout>



    </RelativeLayout>

</LinearLayout>