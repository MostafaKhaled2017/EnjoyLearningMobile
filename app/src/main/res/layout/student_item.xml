<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_of_student"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutDirection="ltr"
    android:layout_marginBottom="0.5dp">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/userImageInBest"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"
            android:src="@mipmap/app_icon" />


        <TextView
            android:id="@+id/userNameInBest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_toLeftOf="@id/userImageInBest"
            android:text="Mostafa"
            android:textSize="18sp" />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/isOnlineImageView"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="18dp"
            android:layout_toLeftOf="@id/userNameInBest"
            android:scaleType="fitXY"
            android:src="@drawable/online_dot"
            android:visibility="invisible" />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/isAdminImageView"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="13dp"
            android:layout_toLeftOf="@id/isOnlineImageView"
            android:scaleType="fitXY"
            android:src="@drawable/star"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/pointsInBest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/userNameInBest"
            android:layout_margin="3dp"
            android:layout_toLeftOf="@id/userImageInBest"
            android:text="15xp"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/positionInBest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="5dp"
            android:text="1"
            android:textSize="21sp" />

    </RelativeLayout>
</android.support.v7.widget.CardView>