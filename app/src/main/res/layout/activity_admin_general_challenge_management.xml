<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layoutDirection="ltr"
  >

    <include layout="@layout/appbar"/>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_below="@id/appBar"
        android:id="@+id/startGeneralChallenge"
        android:onClick="startGeneralChallenge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/buttonStyle"
        android:text="بدء وتصفير وإلغاء تعليم الاسئلة"
        android:padding="10dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_below="@id/appBar"
        android:id="@+id/stopGeneralChallenge"
        android:onClick="stopGeneralChallenge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/buttonStyle"
        android:text="ايقاف"
        android:padding="10dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/changeGeneralChallengeText"
        style="@style/buttonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/appBar"
        android:onClick="changeGeneralChallengeText"
        android:padding="10dp"
        android:text=" تعديل كلمة التحدى" />


</androidx.appcompat.widget.LinearLayoutCompat>