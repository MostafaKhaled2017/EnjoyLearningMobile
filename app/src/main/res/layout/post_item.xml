<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    card_view:cardCornerRadius="10dp"
    android:layout_margin="7dp"
    android:layout_height="wrap_content"
    android:id="@+id/card_view_of_posts">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/postImage"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"
            android:src="@mipmap/app_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mostafa Khaled"
            android:layout_toLeftOf="@id/postImage"
            android:layout_marginTop="20dp"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:id="@+id/postUserName"/>
        <TextView
            android:id="@+id/postDate"
            android:layout_below="@id/postUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9/8/2018"
            android:layout_toLeftOf="@id/postImage"
            android:textColor="@color/grey"
            android:textSize="16sp"
            />
        <TextView
            android:id="@+id/postContent"
            android:layout_below="@id/postImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="عندي سؤال محير عندي سؤال محير عندي سؤال محير عندي سؤال محير عندي سؤال محير عندي سؤال محير عندي سؤال محير عندي سؤال محير عندي سؤال محير عندي سؤال محير عندي سؤال محير عندي سؤال محير عندي سؤال محير عندي سؤال محير عندي سؤال محير عندي سؤال محير عندي سؤال محير "
            android:layout_margin="5dp"
            android:textColor="@color/black"
            android:textSize="@dimen/generalTextSize"
            />
    </RelativeLayout>
</android.support.v7.widget.CardView>