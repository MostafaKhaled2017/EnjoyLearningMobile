<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginBottom="5dp"
    android:layout_height="wrap_content"
    android:id="@+id/card_view_of_posts">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/postImageInDetails"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"
            android:src="@mipmap/app_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mostafa Khaled Mostafa"
            android:layout_toLeftOf="@id/postImageInDetails"
            android:layout_marginTop="20dp"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:id="@+id/postUserNameInDetails"/>
        <TextView
            android:id="@+id/postDateInDetails"
            android:layout_below="@id/postUserNameInDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9/8/2018"
            android:layout_toLeftOf="@id/postImageInDetails"
            android:textColor="@color/grey"
            android:textSize="12sp"
            />

        <!--<android.support.v7.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/warning_icon"
            android:layout_margin="8dp"
            android:id="@+id/warningIcon"
            android:visibility="invisible"/>-->
        <TextView
            android:id="@+id/postContentInDetails"
            android:layout_below="@id/postImageInDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="عندي سؤال محير عندي سؤال محير عندي سؤال محير عندي سؤال محير عندي سؤال محير عندي سؤال محير عندي سؤال محير عندي سؤال محير عندي سؤال محير عندي سؤال محير عندي سؤال محير عندي سؤال محير عندي سؤال محير عندي سؤال محير عندي سؤال محير عندي سؤال محير عندي سؤال محير "
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="25dp"
            android:textColor="@color/black"
            android:textSize="@dimen/generalTextSize"
            />
    </RelativeLayout>
</android.support.v7.widget.CardView>