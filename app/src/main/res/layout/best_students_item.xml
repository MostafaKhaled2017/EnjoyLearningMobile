<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1dp"
    android:id="@+id/card_view_of_best_students">
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/userImageInBest"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"
        android:src="@mipmap/app_icon" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/userNameInBest"
        android:text="Mostafa"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        android:layout_toLeftOf="@id/userImageInBest"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pointsInBest"
        android:text="15xp"
        android:textSize="16sp"
        android:layout_margin="3dp"
        android:layout_toLeftOf="@id/userImageInBest"
        android:layout_below="@id/userNameInBest"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/positionInBest"
        android:textSize="21sp"
        android:text="1"
        android:layout_margin="5dp"
        android:layout_centerVertical="true"/>

</RelativeLayout>
</android.support.v7.widget.CardView>