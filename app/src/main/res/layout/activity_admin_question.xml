<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layoutDirection="ltr"
    android:orientation="vertical">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color3"
    android:orientation="vertical"
    tools:context=".activity.questionActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/color1">

            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/app_name"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_in_toolbar" />
        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <TextView
        android:id="@+id/writerNameTvInQuestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/appBar"
        android:layout_gravity="right"
        android:layout_marginRight="5dp"
        android:layout_marginTop="15dp"
        android:text="الكاتب : "
        android:textColor="@color/writingColor"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/subjectTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/writerNameTvInQuestion"
        android:layout_gravity="right"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:text="المادة : "
        android:textColor="@color/writingColor"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/gradeTvInQuestions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/subjectTv"
        android:layout_gravity="right"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:text="الصف الدراسي : "
        android:textColor="@color/writingColor"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/questionText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/gradeTvInQuestions"
        android:text="ما هي أقسام الأدب؟"
        android:paddingRight="5dp"
        android:paddingLeft="5dp"
        android:textColor="@color/writingColor"
        android:textSize="22sp"
        android:textStyle="bold" />
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/checkBoxGroup"
        android:layout_width="@dimen/width_of_answers_group"
        android:layout_height="wrap_content"
        android:layout_below="@id/questionText"
        style="@style/answersGroupStyle">

        <android.support.v7.widget.AppCompatCheckBox
            android:id="@+id/checkBox1InAdminQuestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="الإجابة الاولي"
            style="@style/oneAnswerStyle"/>

        <android.support.v7.widget.AppCompatCheckBox
            android:id="@+id/checkBox2InAdminQuestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/checkBox1InAdminQuestion"
            android:text="الإجابة الثانية"
            style="@style/oneAnswerStyle" />

        <android.support.v7.widget.AppCompatCheckBox
            android:id="@+id/checkBox3InAdminQuestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/checkBox2InAdminQuestion"
            android:text="الإجابة الثالثة"
            style="@style/oneAnswerStyle" />

        <android.support.v7.widget.AppCompatCheckBox
            android:id="@+id/checkBox4InAdminQuestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/checkBox3InAdminQuestion"
            android:text="الإجابة الرابعة"
            style="@style/oneAnswerStyle"/>

    </RelativeLayout>

    <android.support.v7.widget.AppCompatCheckBox
        android:id="@+id/generalChallengeCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="سؤال تحدى عام "
        android:textSize="18sp"
        android:textColor="@color/writingColor"
        android:layout_marginTop="5dp"
        android:layout_below="@id/checkBoxGroup"/>

    <TextView
        android:id="@+id/answerTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/generalChallengeCheckBox"
        android:layout_gravity="right"
        android:layout_marginRight="5dp"
        android:layout_marginTop="15dp"
        android:text="الإجابة : "
        android:textColor="@color/writingColor"
        android:textSize="18sp" />


    <android.support.v7.widget.AppCompatButton
        android:id="@+id/skipQuestionButton"
        android:layout_below="@id/answerTv"
        style="@style/buttonStyle"
        android:layout_width="30dp"
        android:layout_height="47dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="bottom"
        android:layout_margin="5dp"
        android:text=">" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/showAnswerButton"
        style="@style/buttonStyle"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/answerTv"
        android:layout_gravity="bottom"
        android:layout_margin="5dp"
        android:layout_toLeftOf="@id/skipQuestionButton"
        android:onClick="showAnswer"
        android:text="الإجابة" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/acceptQuestionBtn"
        style="@style/buttonStyle"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:layout_margin="5dp"
        android:layout_toLeftOf="@id/showAnswerButton"
        android:layout_below="@id/answerTv"
        android:onClick="acceptQuestion"
        android:text="قبول" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/refuseQuestionBtn"
        style="@style/buttonStyle"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:layout_margin="5dp"
        android:layout_toLeftOf="@id/acceptQuestionBtn"
        android:layout_below="@id/answerTv"
        android:onClick="refuseQuestion"
        android:text="رفض" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/editQuestionBtn"
        style="@style/buttonStyle"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:layout_margin="5dp"
        android:layout_toLeftOf="@id/refuseQuestionBtn"
        android:layout_below="@id/answerTv"
        android:onClick="editQuestion"
        android:text="تعديل" />
</RelativeLayout>
</ScrollView>