<?xml version="1.0" encoding="utf-8"?>


<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/textView8"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_margin="@dimen/_10sdp"
    android:layoutDirection="rtl"

    card_view:cardCornerRadius="@dimen/_10sdp"
    card_view:cardElevation="10dp"

    >


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/challengeView"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:background="@color/white"

        android:padding="@dimen/_5sdp">


        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/challengeImage"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_alignParentStart="true"
            android:src="@drawable/man"

            />
        <!--     <ImageView
                 android:layout_width="@dimen/_12sdp"
                 android:layout_height="@dimen/_11sdp"
                 android:background="@drawable/selectedgreen"
                 /> -->
        <ImageView
            android:layout_width="@dimen/_12sdp"
            android:layout_height="@dimen/_11sdp"
            android:background="@drawable/default_selected"
            android:visibility="gone" />

        <TextView
            android:id="@+id/challengerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_toEndOf="@+id/challengeImage"
            android:fontFamily="@font/el_messiri"
            android:text="Mostafa khaled"
            android:textColor="@color/black"
            android:textSize="@dimen/_14sdp" />


        <TextView
            android:id="@+id/challengeState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:fontFamily="@font/el_messiri"
            android:text=" مكتملة"
            android:textSize="@dimen/_12sdp" />

        <TextView
            android:id="@+id/challengeScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_toStartOf="@+id/challengeState"
            android:fontFamily="@font/el_messiri"
            android:text=" 1:2"
            android:textSize="@dimen/_12sdp" />

        <TextView
            android:id="@+id/challengeSubject"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_below="@+id/challengerName"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginBottom="@dimen/_2sdp"
            android:background="@drawable/shape_dark"
            android:fontFamily="@font/cairo_semibold"
            android:gravity="center"
            android:text="المادة"
            android:textColor="@color/white"
            android:textSize="@dimen/_11sdp" />


        <!--   <TextView
               android:id="@+id/question"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_gravity="center_horizontal"
               android:text="1"
               android:fontFamily="@font/el_messiri"
               android:textSize="@dimen/_10sdp"
               android:visibility="visible"
               android:layout_marginStart="@dimen/_10sdp"
               android:layout_below="@+id/challengerName"
               android:layout_toEndOf="@+id/challengeImage"/> -->
        <TextView
            android:id="@+id/challengeDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_toEndOf="@+id/challengeImage"
            android:fontFamily="@font/el_messiri"
            android:text="14-10-2019"
            android:textSize="@dimen/_10sdp" />
    </RelativeLayout>


</androidx.cardview.widget.CardView>