<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:id="@+id/challengeView"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="@color/white"
    card_view:cardCornerRadius="10dp"
    card_view:cardElevation="5dp"
    android:paddingStart="@dimen/_10sdp"
    card_view:cardUseCompatPadding="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <RelativeLayout
            android:padding="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >



            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/challengeImage"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:src="@drawable/man"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_alignParentStart="true"

                />
       <!--     <ImageView
                android:layout_width="@dimen/_12sdp"
                android:layout_height="@dimen/_11sdp"
                android:background="@drawable/selectedgreen"
                /> -->
            <ImageView
                android:layout_width="@dimen/_12sdp"
                android:layout_height="@dimen/_11sdp"
                android:background="@drawable/default_selected"
                android:visibility="gone"
                />


            <TextView
                android:id="@+id/challengerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:text="Mostafa khaled"
                android:fontFamily="@font/el_messiri"
                android:textColor="@color/black"
                android:textSize="@dimen/_14sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_toEndOf="@+id/challengeImage"/>


            <TextView
                android:id="@+id/challengeState"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" مكتملة"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:fontFamily="@font/el_messiri"
                android:textSize="@dimen/_12sdp" />
            <TextView
                android:id="@+id/challengeScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 1:2"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_toStartOf="@+id/challengeState"
                android:layout_alignParentTop="true"
                android:fontFamily="@font/el_messiri"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:id="@+id/challengeSubject"
                android:layout_width="@dimen/_100sdp"
                android:gravity="center"
                android:layout_height="@dimen/_30sdp"
                android:background="@drawable/shape_dark"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/cairo_semibold"
                android:text="المادة"
                android:textColor="@color/white"
                android:textSize="@dimen/_11sdp"
                android:layout_below="@+id/challengeScore"
                android:layout_alignParentEnd="true"
                />


         <!--   <TextView
                android:id="@+id/question"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="1"
                android:fontFamily="@font/el_messiri"
                android:textSize="@dimen/_10sdp"
                android:visibility="visible"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_below="@+id/challengerName"
                android:layout_toEndOf="@+id/challengeImage"/> -->
            <TextView
                android:id="@+id/challengeDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="14-10-2019"
                android:layout_marginStart="@dimen/_10sdp"
                android:fontFamily="@font/el_messiri"
                android:textSize="@dimen/_10sdp"
                android:layout_below="@+id/question"
                android:layout_toEndOf="@+id/challengeImage"
                />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
