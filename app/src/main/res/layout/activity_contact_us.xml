<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layoutDirection="rtl"
    android:background="@color/white">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginBottom="8dp"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
 >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cairo"
                android:gravity="center"
                android:text="اتصل بنا"
                android:textColor="#FFFF"
                android:textSize="@dimen/_15sdp"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                />


            <ImageView
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                app:srcCompat="@drawable/backf"

                android:onClick="finishch"


                />

        </RelativeLayout>

    </androidx.appcompat.widget.Toolbar>



    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="@dimen/_250sdp"
        android:layout_height="@dimen/_100sdp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:layout_gravity="center_horizontal"
        android:scaleType="centerCrop"

        app:srcCompat="@drawable/logo" />

    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_60sdp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginEnd="16dp"
        android:layout_gravity="center_horizontal"
        card_view:cardElevation="10dp"


        android:id="@+id/textView8"
        app:cardCornerRadius="@dimen/_10sdp"

        >

        <TextView
            android:id="@+id/phoneNumber"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:autoLink="all"
            android:fontFamily="@font/el_messiri"
            android:gravity="center"

            android:text="رقم الهاتف : 01552609219"
            android:textColor="@color/black"
            android:textStyle="bold" />

    </androidx.cardview.widget.CardView>



    <androidx.cardview.widget.CardView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_60sdp"

        android:layout_marginStart="16dp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="16dp"
        android:gravity="center"
        app:cardCornerRadius="@dimen/_10sdp"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:text="البريد الالكتروني playandlearn123456@gmail.com"
        android:fontFamily="@font/el_messiri"
        android:textColor="@color/black"
        android:layout_gravity="center_horizontal"
        card_view:cardElevation="10dp"


        >


        <TextView
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:autoLink="all"
            android:fontFamily="@font/el_messiri"
            android:gravity="center"
            android:textStyle="bold"

            android:text="البريد الالكتروني: educup.egypt@gmail.com"
            android:textColor="@color/black" />

    </androidx.cardview.widget.CardView>





    <androidx.cardview.widget.CardView
        android:id="@+id/textView10"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_65sdp"
        card_view:cardElevation="10dp"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_marginStart="16dp"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginEnd="16dp"
        android:gravity="center"
        android:padding="@dimen/_15sdp"
        android:layout_gravity="center_horizontal"
        app:cardCornerRadius="@dimen/_10sdp"
   >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="صفحتنا علي فيسبوك :
https://www.facebook.com/educup.eg/"
            android:gravity="center"
            android:fontFamily="@font/el_messiri"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:autoLink="all"
            />

    </androidx.cardview.widget.CardView>

</LinearLayout>