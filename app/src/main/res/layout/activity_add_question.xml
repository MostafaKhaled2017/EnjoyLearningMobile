    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layoutDirection="rtl"
        android:scrollbars="none"
        android:background="@color/white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical"
            android:layout_marginTop="@dimen/_30sdp"
            android:gravity="center_vertical"

            >

            <Spinner
                android:id="@+id/subjectsSpinner"
                android:layout_width="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_height="@dimen/_50sdp"
                style="@style/Widget.AppCompat.TextView.SpinnerItem"
                android:dropDownVerticalOffset="?attr/dropdownListPreferredItemHeight"

                android:layout_marginStart="@dimen/_11sdp"
                android:layout_marginEnd="@dimen/_11sdp"
                android:background="@drawable/gradient_spinner"
                />









            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/relativespinner"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginStart="@dimen/_11sdp"
                android:layout_marginEnd="@dimen/_11sdp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >





                    <Spinner
                        android:id="@+id/gradeSpinner"
                        style="@style/Widget.AppCompat.TextView.SpinnerItem"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="@dimen/_50sdp"
                        android:background="@drawable/gradient_spinner"
                        android:dropDownVerticalOffset="?attr/dropdownListPreferredItemHeight"
                        android:ems="10"
                        android:paddingStart="@dimen/_10sdp"
                        android:inputType="textPersonName"

                        />

                    <View
                        android:layout_width="@dimen/_5sdp"
                        android:layout_height="wrap_content"
                        />


                    <Spinner
                        android:id="@+id/termSpinner"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="@dimen/_50sdp"
                        style="@style/Widget.AppCompat.TextView.SpinnerItem"
                        android:dropDownVerticalOffset="?attr/dropdownListPreferredItemHeight"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:text=""
                        android:paddingStart="@dimen/_10sdp"

                        android:layout_toEndOf="@+id/gradeSpinner"

                        android:background="@drawable/gradient_spinner"

                        />
                </LinearLayout>




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="horizontal"
                    >

                    <Spinner
                        android:id="@+id/unitOrderSpinner"
                        style="@style/Widget.AppCompat.TextView.SpinnerItem"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="@dimen/_50sdp"
                        android:background="@drawable/gradient_spinner"
                        android:dropDownVerticalOffset="?attr/dropdownListPreferredItemHeight"
                        android:ems="10"
                        android:paddingStart="@dimen/_10sdp"
                        android:inputType="textPersonName"


                        />

                    <View
                        android:layout_width="@dimen/_5sdp"
                        android:layout_height="wrap_content"
                        />

                    <Spinner
                        android:id="@+id/lessonOrderSpinner"

                        style="@style/Widget.AppCompat.TextView.SpinnerItem"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="@dimen/_50sdp"
                        android:background="@drawable/gradient_spinner"
                        android:dropDownVerticalOffset="?attr/dropdownListPreferredItemHeight"
                        android:ems="10"
                        android:paddingStart="@dimen/_10sdp"
                        android:inputType="textPersonName"





                        />

                </LinearLayout>











            </LinearLayout>







            <EditText
                android:id="@+id/addQuestionEditText"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:layout_marginStart="@dimen/_11sdp"
                android:layout_marginEnd="@dimen/_11sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/linearborder"
                android:hint="@string/editTextHint"
                android:paddingStart="@dimen/_10sdp"
                android:inputType="textPersonName"
                android:layout_marginBottom="@dimen/_10sdp"
                />


            <TextView
                android:id="@+id/addlessonname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginStart="@dimen/_11sdp"
                android:layout_marginEnd="@dimen/_11sdp"
                android:fontFamily="@font/el_messiri"
                android:text="@string/choicesHint"
                android:textColor="@color/black"
                android:textSize="@dimen/_14sdp"
                android:gravity="center"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_11sdp"

                >

                <EditText
                    android:id="@+id/et1"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_45sdp"
                    android:background="@drawable/linearborder"

                    android:fontFamily="@font/el_messiri"
                    android:gravity="center"
                    android:hint="@string/firstChoicehint"
                    android:textSize="@dimen/_11sdp"
                    android:layout_weight="1"
                    />
                <CheckBox

                    android:id="@+id/checkbox1"

                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_40sdp"


                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginStart="@dimen/_20sdp"


                android:orientation="horizontal"
                android:layout_marginEnd="@dimen/_11sdp"
                >

                <EditText
                    android:id="@+id/et2"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_45sdp"
                    android:layout_weight="1"
                    android:background="@drawable/linearborder"
                    android:fontFamily="@font/el_messiri"
                    android:gravity="center"
                    android:hint="@string/secondChoiceHint"
                    android:textSize="@dimen/_11sdp" />

                <CheckBox

                    android:id="@+id/checkbox2"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_40sdp"

                    />



            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/_20sdp"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="horizontal"
                android:layout_marginEnd="@dimen/_11sdp"
                android:layout_marginStart="@dimen/_20sdp"
                >

                <EditText
                    android:id="@+id/et3"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_45sdp"

                    android:layout_weight="1"
                    android:background="@drawable/linearborder"
                    android:ems="10"
                    android:fontFamily="@font/el_messiri"
                    android:gravity="center"
                    android:hint="@string/thirdChoiceHint"
                    android:textSize="@dimen/_11sdp" />
                <CheckBox

                    android:id="@+id/checkbox3"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_40sdp"
                    />



            </LinearLayout>


            <LinearLayout

                android:layout_marginTop="@dimen/_20sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginEnd="@dimen/_11sdp"
                android:layout_marginStart="@dimen/_20sdp"
                >

                <EditText
                    android:id="@+id/et4"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_45sdp"

                    android:layout_weight="1"
                    android:background="@drawable/linearborder"
                    android:ems="10"
                    android:fontFamily="@font/el_messiri"
                    android:gravity="center"
                    android:hint="@string/fourthChoiceHint"
                    android:textSize="@dimen/_11sdp"
                    />
                <CheckBox

                    android:id="@+id/checkbox4"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_40sdp"

                    />




            </LinearLayout>


            <Button
                android:id="@+id/addQuestionBtn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_40sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:background="@drawable/shape_dark"
                android:fontFamily="@font/cairo_semibold"
                android:text="@string/addQuestionText"
                android:textColor="@color/white"
                android:textSize="@dimen/_12sdp"
               />
        </LinearLayout>
    </ScrollView>
    </LinearLayout>
