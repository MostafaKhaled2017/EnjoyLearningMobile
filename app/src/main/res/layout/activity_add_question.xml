<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layoutDirection="ltr"
    android:scrollbars="none">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color3"
        android:focusable="true"
        android:focusableInTouchMode="true"
        tools:context=".activity.AddQuestionActivity">

        <include layout="@layout/appbar" />

        <TextView
            android:id="@+id/subjectsTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/appBar"
            android:layout_alignParentRight="true"
            android:layout_margin="4dp"
            android:text="المادة : "
            android:textSize="18sp" />

        <Spinner
            android:id="@+id/subjectsSpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/appBar"
            android:layout_marginTop="8dp"
            android:layout_toLeftOf="@id/subjectsTextView"
            android:scrollbars="none" />

        <TextView
            android:id="@+id/gradeTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/subjectsTextView"
            android:layout_alignParentRight="true"
            android:layout_margin="4dp"
            android:text="الصف الدراسى : "
            android:textSize="18sp" />

        <Spinner
            android:id="@+id/gradeSpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/subjectsSpinner"
            android:layout_marginTop="8dp"
            android:layout_toLeftOf="@id/gradeTv"
            android:scrollbars="none" />


        <TextView
            android:id="@+id/languageBranchesTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/gradeTv"
            android:layout_alignParentRight="true"
            android:layout_margin="4dp"
            android:visibility="visible"
            android:text="فرع السؤال : "
            android:textSize="18sp" />

        <Spinner
            android:id="@+id/languageBranchesSpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/gradeSpinner"
            android:layout_marginTop="8dp"
            android:visibility="visible"
            android:layout_toLeftOf="@id/lessonOrderTv"
            android:scrollbars="none" />


        <TextView
            android:id="@+id/unitOrderTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/languageBranchesTv"
            android:layout_alignParentRight="true"
            android:layout_margin="4dp"
            android:text="ترتيب الوحدة : "
            android:textSize="18sp" />

        <Spinner
            android:id="@+id/unitOrderSpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/languageBranchesSpinner"
            android:layout_marginTop="4dp"
            android:layout_toLeftOf="@id/unitOrderTextView"
            android:scrollbars="none" />

        <TextView
            android:id="@+id/lessonOrderTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/unitOrderTextView"
            android:layout_alignParentRight="true"
            android:layout_margin="4dp"
            android:text="ترتيب الدرس : "
            android:textSize="18sp" />

        <Spinner
            android:id="@+id/lessonOrderSpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/unitOrderSpinner"
            android:layout_marginTop="8dp"
            android:layout_toLeftOf="@id/lessonOrderTv"
            android:scrollbars="none" />


        <TextView
            android:id="@+id/termTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/lessonOrderTv"
            android:layout_alignParentRight="true"
            android:layout_margin="4dp"
            android:text="الفصل الدراسى : "
            android:textSize="18sp" />

        <Spinner
            android:id="@+id/termSpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/lessonOrderSpinner"
            android:layout_marginTop="8dp"
            android:layout_toLeftOf="@id/termTv"
            android:scrollbars="none" />

        <EditText
            android:id="@+id/addQuestionEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/termTv"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:hint="السؤال"
            android:inputType="textCapSentences" />

        <TextView
            android:id="@+id/answerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/addQuestionEditText"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"
            android:text="الإجابات"
            android:textColor="@color/writingColor"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/instuctionsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/answerText"
            android:layout_margin="5dp"
            android:text="قم بكتابة اختيارين على الأقل للسؤال وعلم الإجابة أو الإجابات الصحيحة "
            android:textSize="18sp" />

