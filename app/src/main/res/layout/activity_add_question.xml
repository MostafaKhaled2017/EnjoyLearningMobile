        <android.support.v7.widget.AppCompatCheckBox
            android:id="@+id/checkbox1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="55dp"
            android:layout_below="@id/instuctionsText"/>

        <EditText
            android:id="@+id/et1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/instuctionsText"
            android:layout_toRightOf="@id/checkbox1"
            android:layout_marginTop="8dp"
            android:hint="الإجابة الأولى"
            android:inputType="text" />


        <android.support.v7.widget.AppCompatCheckBox
            android:id="@+id/checkbox2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="55dp"
            android:layout_below="@id/et1"/>

        <EditText
            android:id="@+id/et2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/et1"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@id/checkbox2"
            android:hint="الإجابة الثانية"
            android:inputType="text" />

        <android.support.v7.widget.AppCompatCheckBox
            android:id="@+id/checkbox3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="55dp"
            android:layout_below="@id/et2"/>

        <EditText
            android:id="@+id/et3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/et2"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@id/checkbox3"
            android:hint="الإجابة الثالثة(اختيارية)"
            android:inputType="text" />


        <android.support.v7.widget.AppCompatCheckBox
            android:id="@+id/checkbox4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="55dp"
            android:layout_below="@id/et3"/>

        <EditText
            android:id="@+id/et4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/et3"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@id/checkbox4"
            android:hint="الإجابة الرابعة(اختيارية)"
            android:inputType="text" />

        <Button
            android:id="@+id/addQuestionBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/et4"
            android:layout_margin="8dp"
            android:background="@drawable/rectangle_button"
            android:text="رفع السؤال"
            android:textColor="@color/white" />

    </RelativeLayout>
</ScrollView>