<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lessonTitleView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="1dp"
    android:background="@color/white">
    <!-- TODO : think about making the title in the center of the View -->
    <TextView
        android:id="@+id/lessonTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="2dp"
        android:layout_alignParentRight="true"
        android:textColor="@color/writingColor"
        android:textStyle="bold"
        android:text="عنوان الدرس"/>
    <TextView
        android:id="@+id/writerName"
        android:layout_below="@id/lessonTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:layout_alignParentRight="true"
        android:textColor="@color/writingColor"
        android:layout_margin="2dp"
        android:text="الكاتب : "/>
</RelativeLayout>