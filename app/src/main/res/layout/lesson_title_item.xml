<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android">
<androidx.cardview.widget.CardView android:id="@+id/card_view_of_lesson"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="@color/white"
    card_view:cardCornerRadius="@dimen/_20sdp"
    card_view:cardUseCompatPadding="true"
    xmlns:android="http://schemas.android.com/apk/res/android">



        <RelativeLayout
            android:padding="@dimen/_10sdp"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_120sdp">


            <ImageView
                android:id="@+id/userImageInBest"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_alignParentStart="true"
                android:layout_marginTop="@dimen/_5sdp"
                app:srcCompat="@drawable/video" />


            <TextView
                android:id="@+id/lessonTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_toEndOf="@+id/userImageInBest"
                android:fontFamily="@font/el_messiri"
                android:text="ايات العلم"
                android:textColor="@color/black"
                android:textSize="@dimen/_13sdp" />

            <RatingBar
                android:id="@+id/challengeDate"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_below="@+id/lessonTitle"
                android:layout_marginTop="@dimen/_25sdp"
                android:fontFamily="@font/el_messiri"
                android:rating="5" />


        </RelativeLayout>




    </androidx.cardview.widget.CardView>

    <View
        android:layout_width="@dimen/_10sdp"
        android:layout_height="@dimen/_120sdp"/>
    </LinearLayout>
