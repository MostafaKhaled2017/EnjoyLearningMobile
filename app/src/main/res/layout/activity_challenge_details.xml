<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    android:orientation="vertical"
    android:background="@color/white">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginBottom="8dp"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:paddingBottom="@dimen/_5sdp"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">



            <TextView
                android:id="@+id/addcourse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/el_messiri"
                android:gravity="center"
                android:text="تجهيز التحدي "
                android:textColor="#FFFF"
                android:textSize="@dimen/_15sdp"
                android:textStyle="bold"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"/>

            <ImageView
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                app:srcCompat="@drawable/backf"

                android:onClick="finishch"


                />


        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/_30sdp"
        >
        <TextView
            android:id="@+id/lessonContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginEnd="@dimen/_16sdp"
            android:fontFamily="@font/el_messiri"
            android:textColor="@color/black"
            android:textSize="@dimen/_14sdp"
            android:text=" اختر الفصل الدراسي "

            />


        <Spinner
            android:id="@+id/termSpinnerInChallengeDetails"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_16sdp"
            android:scrollbars="none"
            style="@style/Widget.AppCompat.TextView.SpinnerItem"
            android:dropDownVerticalOffset="?attr/dropdownListPreferredItemHeight"
            android:ems="10"
            android:background="@drawable/gradient_spinner"
            android:inputType="textPersonName"
            android:text=""
            />
        <TextView
            android:id="@+id/choosetirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginEnd="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@font/el_messiri"
            android:text=" اختر المادة الدراسية "
            android:textColor="@color/black"
            android:textSize="@dimen/_14sdp"
            />


        <Spinner
            android:id="@+id/subjectsSpinnerInChallengeDetails"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginEnd="@dimen/_16sdp"
            style="@style/Widget.AppCompat.TextView.SpinnerItem"
            android:dropDownVerticalOffset="@dimen/_40sdp"
            android:ems="10"
            android:background="@drawable/gradient_spinner"
            android:scrollbars="none"
            android:inputType="textPersonName"
            android:text=""
            />




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_100sdp"
            android:orientation="horizontal"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_16sdp"
            >



            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:orientation="vertical"
                android:layout_weight="1"
                >
                <TextView
                    android:id="@+id/chooseunite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:fontFamily="@font/el_messiri"
                    android:text=" اخترالوحدة "
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14sdp"
                    />


                <Spinner
                    android:id="@+id/unitSpinnerInChallengeDetails"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:scrollbars="none"
                    style="@style/Widget.AppCompat.TextView.SpinnerItem"
                    android:dropDownVerticalOffset="?attr/dropdownListPreferredItemHeight"
                    android:ems="10"
                    android:background="@drawable/gradient_spinner"

                    android:inputType="textPersonName"
                    android:text=""
                    />

            </LinearLayout>

            <View
                android:layout_width="@dimen/_10sdp"
                android:layout_height="wrap_content"
                />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:orientation="vertical"
                android:layout_weight="1"
                >
                <TextView
                    android:id="@+id/chooselesson"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"


                    android:fontFamily="@font/el_messiri"
                    android:text=" اختر الدرس "
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14sdp"
                    />


                <Spinner
                    android:id="@+id/lessonSpinnerInChallengeDetails"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:scrollbars="none"
                    style="@style/Widget.AppCompat.TextView.SpinnerItem"
                    android:dropDownVerticalOffset="?attr/dropdownListPreferredItemHeight"
                    android:ems="10"
                    android:background="@drawable/gradient_spinner"

                    android:inputType="textPersonName"
                    android:text=""
                    />

            </LinearLayout>



        </LinearLayout>








