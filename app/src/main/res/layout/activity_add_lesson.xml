<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true">
        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/appBar">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbarInAddLesson"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/color1">

                <TextView
                    android:id="@+id/toolbar_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="إضافة درس"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_in_toolbar" />
            </android.support.v7.widget.Toolbar>

        </android.support.design.widget.AppBarLayout>

        <EditText
            android:layout_below="@id/appBar"
            android:id="@+id/titleInAddLesson"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="10dp"
            android:hint="عنوان الدرس"
            android:inputType="textCapSentences"/>


        <TextView
            android:id="@+id/unitOrderTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/titleInAddLesson"
            android:layout_marginLeft="2dp"
            android:text="الوحدة : "
            android:textSize="@dimen/generalTextSize" />

        <Spinner
            android:id="@+id/unitOrderSpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/titleInAddLesson"
            android:layout_gravity="right"
            android:layout_toLeftOf="@id/unitOrderTextView" />

        <TextView
            android:id="@+id/lessonOrderTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/titleInAddLesson"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="35dp"
            android:layout_toLeftOf="@id/unitOrderSpinner"
            android:text="محتوى الدرس : "
            android:textSize="@dimen/generalTextSize" />

        <Spinner
            android:id="@+id/lessonOrderSpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/titleInAddLesson"
            android:layout_gravity="right"
            android:layout_toLeftOf="@id/lessonOrderTextView" />

        <TextView
            android:id="@+id/subjectTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/unitOrderTextView"
            android:layout_marginTop="20dp"
            android:text="المادة"
            android:textSize="@dimen/generalTextSize" />

        <Spinner
            android:id="@+id/subjectsSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/unitOrderTextView"
            android:layout_marginTop="20dp"
            android:layout_toLeftOf="@id/subjectTextView" />

        <EditText
            android:id="@+id/contentInAddLesson"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_below="@id/subjectsSpinner"
            android:layout_marginTop="15dp"
            android:gravity="top"
            android:hint="الدرس"
            android:inputType="textMultiLine|textCapSentences"/>

        <Button
            android:id="@+id/addLessonButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/contentInAddLesson"
            android:layout_margin="5dp"
            android:background="@drawable/rectangle_button"
            android:text="رفع الدرس"
            android:textColor="@color/white" />


    </RelativeLayout>
</ScrollView>