<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layoutDirection="rtl"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="@dimen/_80sdp"
        android:orientation="vertical"
        tools:context=".Regestration.SignUPTwo">
        <FrameLayout
            android:layout_marginTop="-4dp"
            android:id="@+id/progressbarframe2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            >

            <ProgressBar
                android:id="@+id/progressbarOfSignUp2"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:layout_marginTop="2dp"
                android:indeterminate="true"
                android:max="100"
                android:visibility="invisible"
                android:elevation="10dp"
                android:progress="100"
                />

        </FrameLayout>





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/_10sdp"

            >




            <TextView
                android:id="@+id/emailsignupTwo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:fontFamily="@font/el_messiri"
                android:text="المرحلة  الدراسية"
                android:focusedByDefault="true"
                android:focusableInTouchMode="true"
                android:textColor="@color/black"
                android:textSize="@dimen/_14sdp"



                />


            <Spinner
                android:id="@+id/userGradeSpinner"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:ems="10"
                android:inputType="textPersonName"
                android:text=""
                style="@style/Widget.AppCompat.TextView.SpinnerItem"
                android:dropDownVerticalOffset="?attr/dropdownListPreferredItemHeight"

                android:background="@drawable/gradient_spinner"
                />

            <TextView
                android:id="@+id/school"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:fontFamily="@font/el_messiri"
                android:text="نوع المدرسة "
                android:textColor="@color/black"
                android:textSize="@dimen/_14sdp"
                />

            <Spinner
                android:id="@+id/schoolTypeSpinner"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                style="@style/Widget.AppCompat.TextView.SpinnerItem"
                android:dropDownVerticalOffset="?attr/dropdownListPreferredItemHeight"
                android:background="@drawable/gradient_spinner"

                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/school"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:fontFamily="@font/el_messiri"
                android:text="اسم المحافظة"
                android:textColor="@color/black"
                android:textSize="@dimen/_14sdp"
                />


            <Spinner
                android:id="@+id/governorateName"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                style="@style/Widget.AppCompat.TextView.SpinnerItem"
                android:dropDownVerticalOffset="?attr/dropdownListPreferredItemHeight"
                android:background="@drawable/gradient_spinner"

                android:ems="10"
                android:inputType="textPersonName"
                android:text=""
                />
            <TextView
                android:id="@+id/phonenumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:fontFamily="@font/el_messiri"
                android:text="رقم الهاتف (اختيارى)"
                android:textColor="@color/black"
                android:textSize="@dimen/_14sdp"
                />

            <EditText
                android:id="@+id/phoneNo"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:background="@drawable/linearborder"
                android:ems="10"
                android:inputType="number"
                android:text=""
                android:textAlignment="viewStart"
                android:paddingStart="@dimen/_4sdp"
                />


            <TextView
                android:id="@+id/emailfriends"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:fontFamily="@font/el_messiri"
                android:text="كود الصديق الذي دعاك(اختيارى)"
                android:textColor="@color/black"
                android:textSize="@dimen/_14sdp"
                />

            <EditText
                android:id="@+id/invitingFriend"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:textAlignment="viewStart"
                android:paddingStart="@dimen/_4sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:background="@drawable/linearborder"
                android:ems="10"
                android:inputType="textEmailAddress"
                android:text=""
                />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                >
                <CheckBox
                    android:id="@+id/acceptTerms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/el_messiri"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14sdp"


                    />

                <TextView
                    android:id="@+id/termsTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/acceptTerms"
                    android:fontFamily="@font/el_messiri"
                    android:text="أوافق على شروط الاستخدام"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    />

            </RelativeLayout>
            <Button
                android:id="@+id/signUpBtn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:background="@drawable/shape_dark"
                android:fontFamily="@font/el_messiri"
                android:text="تسجيل حسابي"
                android:layout_marginBottom="@dimen/_5sdp"
                android:textColor="@color/white"
                android:textSize="@dimen/_12sdp"
                />

