<?xml version="1.0" encoding="utf-8"?>

<ScrollView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
     >


        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_60sdp"
            android:background="@color/colorPrimary">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tahadi"
                    android:layout_width="@dimen/_120sdp"
                    android:layout_height="@dimen/_80sdp"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="@font/cairo"
                    android:gravity="center"
                    android:text=" تحدى الان"
                    android:textColor="#FFFF"
                    android:textSize="@dimen/_18sdp"
                    android:textStyle="bold"
                    tools:fontFamily="@font/cairo" />

                <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_25sdp"
                    android:layout_marginEnd="@dimen/_20sdp"
                    app:srcCompat="@drawable/backf"


                    />


            </RelativeLayout>


        </androidx.appcompat.widget.Toolbar>



        <ImageView
            android:layout_marginTop="@dimen/_25sdp"

            android:background="@drawable/linearborder"
            android:id="@+id/imagecemecal"
            android:layout_width="@dimen/_180sdp"
            android:layout_height="@dimen/_70sdp"
            android:layout_below="@+id/toolbar"
            android:src="@drawable/cemecal"
            android:layout_centerHorizontal="true"


            />


        <RelativeLayout
            android:id="@+id/linearthree"
            android:layout_below="@+id/imagecemecal"
            android:gravity="center"
            android:layout_marginStart="@dimen/_2sdp"
            android:layout_marginEnd="@dimen/_2sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/questionText"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cairo_semibold"
                android:text="@string/question"
                android:textSize="@dimen/_13sdp"


                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/questionText"
                android:fontFamily="@font/cairo_semibold"
                android:text="@string/note"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/_5sdp"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_10sdp"


                />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/checkBoxGroup"
            android:layout_below="@+id/linearthree"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_marginStart="@dimen/_15sdp"
            android:background="@drawable/linearborder"
            android:orientation="vertical"
            >




                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="@string/h2o"
                    android:fontFamily="@font/cairo_semibold"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/black"
                    android:layout_marginStart="@dimen/_18sdp"
                    android:layout_marginTop="@dimen/_25sdp"
                    android:layout_marginEnd="@dimen/_18sdp"
                    android:button="@null"
                    android:textAlignment="textEnd"
                    android:drawableEnd="@drawable/indicatiorcheck"



                    />





            <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:fontFamily="@font/cairo_semibold"
                    android:textColor="@color/black"
                    android:text="@string/water"
                    android:textSize="@dimen/_12sdp"
                android:layout_marginStart="@dimen/_18sdp"
                android:layout_marginTop="@dimen/_25sdp"
                android:layout_marginEnd="@dimen/_18sdp"
                android:button="@null"
                android:textAlignment="textStart"
                android:drawableEnd="@drawable/check"
                    />





                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:checked="true"
                    android:fontFamily="@font/cairo_semibold"
                    android:textColor="@color/black"
                    android:text="كلوريد الصوديوم"
                    android:textSize="@dimen/_12sdp"
                    android:layout_marginStart="@dimen/_18sdp"
                    android:layout_marginTop="@dimen/_25sdp"
                    android:layout_marginEnd="@dimen/_18sdp"
                    android:button="@null"
                    android:textAlignment="textStart"
                    android:drawableEnd="@drawable/check"
                    />





                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:checked="true"
                    android:fontFamily="@font/cairo_semibold"
                    android:text="ليس  مما  سبق"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp"
                    android:layout_marginStart="@dimen/_18sdp"
                    android:layout_marginTop="@dimen/_25sdp"
                    android:layout_marginEnd="@dimen/_18sdp"
                    android:button="@null"
                    android:textAlignment="textStart"
                    android:drawableEnd="@drawable/check"                       />


        </LinearLayout>



        <RadioGroup
            android:id="@+id/radioGroup"

            android:layout_below="@+id/linearthree"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_marginStart="@dimen/_15sdp"
            android:background="@drawable/linearborder"
            android:visibility="gone"
            android:orientation="vertical"
            >




            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="@string/h2o"
                android:fontFamily="@font/cairo_semibold"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/black"
                android:layout_marginStart="@dimen/_18sdp"
                android:layout_marginTop="@dimen/_25sdp"
                android:layout_marginEnd="@dimen/_18sdp"
                android:button="@null"
                android:textAlignment="textEnd"

                android:drawableEnd="@drawable/radioback"


                />


            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="@string/water"
                android:fontFamily="@font/cairo_semibold"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/black"
                android:layout_marginStart="@dimen/_18sdp"
                android:layout_marginTop="@dimen/_25sdp"
                android:layout_marginEnd="@dimen/_18sdp"
                android:button="@null"
                android:textAlignment="textStart"
                android:drawableEnd="@drawable/radioback"


                />







            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:checked="true"
                android:fontFamily="@font/cairo_semibold"
                android:textColor="@color/black"
                android:text="كلوريد الصوديوم"
                android:textSize="@dimen/_12sdp"
                android:layout_marginStart="@dimen/_18sdp"
                android:layout_marginTop="@dimen/_25sdp"
                android:layout_marginEnd="@dimen/_18sdp"
                android:button="@null"
                android:textAlignment="textStart"
                android:drawableEnd="@drawable/radioback"
                />





            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:checked="true"
                android:fontFamily="@font/cairo_semibold"
                android:text="ليس  مما  سبق"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp"
                android:layout_marginStart="@dimen/_18sdp"
                android:layout_marginTop="@dimen/_25sdp"
                android:layout_marginEnd="@dimen/_18sdp"
                android:button="@null"
                android:textAlignment="textStart"
                android:drawableEnd="@drawable/radioback"
                />


        </RadioGroup>



        <Button
            android:id="@+id/skipQuestionButton"
            android:layout_marginBottom="@dimen/_15sdp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:background="@drawable/shape_dark"
            android:fontFamily="@font/cairo_semibold"
            android:text="التالي"
            android:layout_below="@+id/checkBoxGroup"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:textColor="@color/white"
            android:textSize="@dimen/_14sdp" />
    </RelativeLayout>

</ScrollView>