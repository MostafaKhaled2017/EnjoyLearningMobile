<?xml version="1.0" encoding="utf-8"?>

    <androidx.cardview.widget.CardView
    android:padding="5dp"
    app:cardCornerRadius="@dimen/_20sdp"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_200sdp"
    android:layoutDirection="rtl"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        >



        <RelativeLayout
            android:padding="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/addcomplaint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/el_messiri"
                android:text="تقديم  شكوى  "
                android:textColor="@color/black"
                android:textSize="@dimen/_14sdp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_alignParentTop="true"

                />


            <TextView
                android:id="@+id/areyousure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/el_messiri"
                android:text="هل  انت متاكد انك تريد تقديم شكوى فى  هذا السؤال؟ "
                android:textSize="@dimen/_11sdp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_20sdp"
                android:gravity="center_horizontal"
                android:layout_below="@+id/addcomplaint"

                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/areyousure"

                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/yes"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_centerHorizontal="true"

                    android:layout_marginTop="@dimen/_30sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:background="@drawable/shape_dark"
                    android:fontFamily="@font/el_messiri"

                    android:text="نعم"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_14sdp"
                    android:textStyle="bold" />
                <Button
                    android:id="@+id/yeswhite"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:background="@drawable/backimage"
                    android:fontFamily="@font/el_messiri"
                    android:textStyle="bold"
                    android:text="نعم"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14sdp"
                    android:layout_below="@+id/areyousure"
                    android:visibility="gone"
                    android:layout_centerHorizontal="true"
                    />

                <Button
                    android:id="@+id/no"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_below="@+id/areyousure"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:layout_toEndOf="@+id/yes"
                    android:background="@drawable/backimage"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="@font/el_messiri"
                    android:text="لا"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14sdp"
                    android:textStyle="bold" />



            </LinearLayout>



        </RelativeLayout>


    </androidx.cardview.widget.CardView>


