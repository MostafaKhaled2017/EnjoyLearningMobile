<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    android:orientation="vertical"
    android:background="@color/white">






    <FrameLayout
        android:layout_marginTop="-4dp"
        android:id="@+id/progressbarframe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >

        <ProgressBar
            android:id="@+id/progressbar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:layout_marginTop="2dp"
            android:indeterminate="true"
            android:max="100"
            android:visibility="invisible"
            android:elevation="10dp"
            android:progress="100"
            />

    </FrameLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical"

        >

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/el_messiri"
            android:text="البريد الالكتروني"
            android:textColor="@color/black"
            android:textSize="@dimen/_16sdp"
            />

        <EditText
            android:id="@+id/etEmailSignIn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginEnd="@dimen/_16sdp"
            android:background="@drawable/linearborder"
            android:ems="10"
            android:inputType="textPersonName"
            android:padding="@dimen/_3sdp"
            android:text=""
            />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/el_messiri"
            android:text="كلمة المرور"
            android:textColor="@color/black"
            android:textSize="@dimen/_16sdp"

            />

        <EditText
            android:id="@+id/etPasswordSignIn"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginEnd="@dimen/_16sdp"
            android:background="@drawable/linearborder"
            android:ems="10"
            android:padding="@dimen/_3sdp"
            android:textColor="@color/black"
            />

        <!-- TODO : add the icon that shows the password -->
        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:visibility="gone"

            app:srcCompat="@drawable/eys" />

        <Button
            android:id="@+id/signInWithEmailAndPasswordBtn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/shape_dark"
            android:fontFamily="@font/cairo_semibold"
            android:text="تسجيل الدخول"
            android:textColor="@color/white"
            android:textSize="@dimen/_14sdp"
            android:textStyle="bold"

            />

        <!-- <TextView
            android:id="@+id/textView3"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/cairo_semibold"
            android:text="هل نسيت كلمة السر"
            android:textColor="@color/black"
            android:textSize="@dimen/_12sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.078"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button"
            app:layout_constraintVertical_bias="0.063" />-->

        <TextView
            android:id="@+id/tvForgotPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/cairo_semibold"
            android:text="هل نسيت كلمة السر؟"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_14sdp"
            />


        <RelativeLayout

            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_gravity="center_horizontal"
            android:paddingEnd="@dimen/_30sdp"
            android:gravity="center_horizontal"
            android:paddingStart="@dimen/_10sdp"

            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp">
            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_30sdp"


                android:layout_marginTop="@dimen/_5sdp"
                android:fontFamily="@font/cairo_semibold"
                android:text="أو  سجل  الدخول بواسطة "
                android:textColor="@color/black"
                android:textSize="@dimen/_14sdp"

                android:layout_alignParentStart="true"
                />

            <ImageView
                android:id="@+id/googleBtn"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:src="@drawable/google"

                android:layout_toEndOf="@+id/textView5"
                android:layout_marginStart="@dimen/_10sdp"
                />

        </RelativeLayout>


    </LinearLayout>

</LinearLayout>