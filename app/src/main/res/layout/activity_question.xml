<?xml version="1.0" encoding="utf-8"?>

<ScrollView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:layoutDirection="rtl"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_500sdp"
        android:background="@color/white">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_60sdp"
            android:background="@color/colorPrimary">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tahadi"
                    android:layout_width="@dimen/_120sdp"
                    android:layout_height="@dimen/_80sdp"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="@font/cairo"
                    android:gravity="center"
                    android:text=" تحدى الان"
                    android:textColor="#FFFF"
                    android:textSize="@dimen/_18sdp"
                    android:textStyle="bold"
                    tools:fontFamily="@font/cairo" />


            </RelativeLayout>


        </androidx.appcompat.widget.Toolbar>

        <ProgressBar
            android:id="@+id/timerProgressbar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_below="@id/toolbar"
            android:layout_marginLeft="-1dp"
            android:layout_marginTop="-2dp"
            android:layout_marginRight="-1dp"
            android:max="100"
            android:progress="100"
            android:rotation="180" />


        <RelativeLayout
            android:id="@+id/linearthree"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/toolbar"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_40sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:paddingStart="@dimen/_10sdp"
            android:gravity="center">

            <TextView
                android:id="@+id/questionText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cairo_semibold"
                android:text="@string/question"
                android:textColor="@color/black"
                android:textSize="@dimen/_13sdp" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/checkBoxGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearthree"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_25sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:paddingBottom="@dimen/_5sdp"
            android:background="@drawable/linearborder"
            android:orientation="vertical"
            android:visibility="gone">


            <CheckBox
                android:id="@+id/checkBox1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_18sdp"
                android:layout_marginTop="@dimen/_25sdp"
                android:layout_marginEnd="@dimen/_18sdp"
                android:button="@null"
                android:drawableEnd="@drawable/indicatiorcheck"
                android:fontFamily="@font/cairo_semibold"
                android:text="@string/h2o"
                android:textAlignment="textEnd"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp"


                />


            <CheckBox
                android:id="@+id/checkBox2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_18sdp"
                android:layout_marginTop="@dimen/_25sdp"
                android:layout_marginEnd="@dimen/_18sdp"
                android:button="@null"
                android:drawableEnd="@drawable/indicatiorcheck"
                android:fontFamily="@font/cairo_semibold"
                android:text="@string/water"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp" />


            <CheckBox
                android:id="@+id/checkBox3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_18sdp"
                android:layout_marginTop="@dimen/_25sdp"
                android:layout_marginEnd="@dimen/_18sdp"
                android:layout_weight="1"
                android:button="@null"
                android:checked="false"
                android:drawableEnd="@drawable/indicatiorcheck"
                android:fontFamily="@font/cairo_semibold"
                android:text="كلوريد الصوديوم"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp" />


            <CheckBox
                android:id="@+id/checkBox4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_18sdp"
                android:layout_marginTop="@dimen/_25sdp"
                android:layout_marginEnd="@dimen/_18sdp"
                android:layout_weight="1"
                android:button="@null"
                android:drawableEnd="@drawable/indicatiorcheck"
                android:fontFamily="@font/cairo_semibold"
                android:text="ليس  مما  سبق"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp"
                android:paddingBottom="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_20sdp"/>


        </LinearLayout>


        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearthree"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:background="@drawable/linearborder"
            android:orientation="vertical"
            android:visibility="visible">


            <RadioButton
                android:id="@+id/radio1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_3sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_3sdp"
                android:button="@null"
                android:padding="@dimen/_5sdp"
                android:drawableEnd="@drawable/radioback"
                android:fontFamily="@font/cairo_semibold"
                android:text="الهيدروجين"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp" />


            <RadioButton
                android:id="@+id/radio2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_3sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_3sdp"
                android:button="@null"
                android:padding="@dimen/_5sdp"
                android:drawableEnd="@drawable/radioback"
                android:fontFamily="@font/cairo_semibold"
                android:text="@string/water"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp" />


            <RadioButton
                android:id="@+id/radio3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_3sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_3sdp"
                android:layout_weight="1"
                android:button="@null"
                android:padding="@dimen/_5sdp"
                android:drawableEnd="@drawable/radioback"
                android:fontFamily="@font/cairo_semibold"
                android:text="كلوريد الصوديوم"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp" />

            <RadioButton
                android:id="@+id/radio4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_3sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_3sdp"
                android:layout_weight="1"
                android:button="@null"
                android:padding="@dimen/_5sdp"
                android:drawableEnd="@drawable/radioback"
                android:fontFamily="@font/cairo_semibold"
                android:text="ليس  مما  سبق"
                android:textAlignment="textStart"
                android:layout_marginBottom="@dimen/_20sdp"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp" />


        </RadioGroup>


        <Button
            android:id="@+id/skipQuestionButton"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:background="@drawable/shape_dark"
            android:fontFamily="@font/cairo_semibold"
            android:text="التالي"
            android:textColor="@color/white"
            android:textSize="@dimen/_14sdp" />
    </RelativeLayout>

</ScrollView>